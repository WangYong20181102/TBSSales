<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/view_top_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d24" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="@dimen/d13"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/d24"
            android:layout_marginTop="@dimen/d2"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/un_select" />

            <View
                android:id="@+id/view_left_line"
                android:layout_width="@dimen/d1"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/d2"
                android:background="@color/FC_D8D8D8" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d12"
            android:text="领取"
            android:textSize="@dimen/s13" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d24"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/d14">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="土拨鼠"
                    android:textColor="@color/FC_999999"
                    android:textSize="@dimen/s13" />

                <TextView
                    android:id="@+id/tv_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/d23"
                    android:text="2019-03-29 11:11"
                    android:textColor="@color/FC_999999"
                    android:textSize="@dimen/s13" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linear_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/d23"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/d3"
                    android:layout_height="@dimen/d3"
                    android:background="@drawable/client_detail_menu" />

                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d9"
                    android:text="手动领取"
                    android:textColor="@color/FC_333333"
                    android:textSize="@dimen/s13" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>