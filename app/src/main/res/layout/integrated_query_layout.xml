<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/d43"
        android:background="@color/white"
        android:clickable="true"
        android:focusableInTouchMode="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d20"
                android:gravity="center"
                android:text="筛选客户"
                android:textColor="@color/black"
                android:textSize="@dimen/s17"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/d1"
                android:layout_marginLeft="@dimen/d30"
                android:layout_marginRight="@dimen/d30"
                android:layout_marginTop="@dimen/d10"
                android:background="@color/FC_E5E5E5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d28"
                android:layout_marginTop="@dimen/d26"
                android:text="领取人"
                android:textColor="@color/FC_333333"
                android:textSize="@dimen/s15"
                android:textStyle="bold" />

            <GridView
                android:id="@+id/grid_view_next_visit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d28"
                android:layout_marginRight="@dimen/d28"
                android:layout_marginTop="@dimen/d12"
                android:numColumns="3"
                android:verticalSpacing="@dimen/d9" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d28"
                android:layout_marginTop="@dimen/d26"
                android:text="城市"
                android:textColor="@color/FC_333333"
                android:textSize="@dimen/s15"
                android:textStyle="bold" />

            <GridView
                android:id="@+id/grid_view_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d28"
                android:layout_marginRight="@dimen/d28"
                android:layout_marginTop="@dimen/d12"
                android:numColumns="3"
                android:verticalSpacing="@dimen/d9" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d28"
                android:layout_marginTop="@dimen/d26"
                android:text="客户类型"
                android:textColor="@color/FC_333333"
                android:textSize="@dimen/s15"
                android:textStyle="bold" />

            <GridView
                android:id="@+id/grid_view_client_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d28"
                android:layout_marginRight="@dimen/d28"
                android:layout_marginTop="@dimen/d12"
                android:numColumns="3"
                android:verticalSpacing="@dimen/d9" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d42"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:orientation="horizontal"
            android:weightSum="2">

            <RelativeLayout
                android:layout_width="@dimen/d0"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/text_reset"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="重置"
                    android:textColor="@color/FC_333333"
                    android:textSize="@dimen/s15" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d1"
                    android:background="@color/FC_E5E5E5" />
            </RelativeLayout>

            <TextView
                android:id="@+id/text_sure"
                android:layout_width="@dimen/d0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/FC_107BFD"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="@dimen/s15" />


        </LinearLayout>
    </RelativeLayout>
</LinearLayout>