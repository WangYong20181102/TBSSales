<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/d183"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/d37">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/d35"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="@dimen/d73"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    android:layout_width="@dimen/d73"
                    android:layout_height="@dimen/d73"
                    android:layout_marginTop="@dimen/d4"
                    app:cardCornerRadius="@dimen/d36.5"
                    app:cardElevation="@dimen/d0">

                    <ImageView
                        android:id="@+id/image_no_two"
                        android:layout_width="@dimen/d73"
                        android:layout_height="@dimen/d73"
                        android:src="@mipmap/add" />
                </android.support.v7.widget.CardView>

                <ImageView
                    android:layout_width="@dimen/d19"
                    android:layout_height="@dimen/d23"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/no2" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d5"
                android:text="NO:2"
                android:textColor="@color/FC_999999"
                android:textSize="@dimen/s13"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_no_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d2"
                android:text="大狮子"
                android:textColor="@color/FC_333333"
                android:textSize="@dimen/s13"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="@dimen/d95"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    android:layout_width="@dimen/d95"
                    android:layout_height="@dimen/d95"
                    android:background="@drawable/client_viewpager_icon_bg"
                    app:cardCornerRadius="@dimen/d50"
                    app:cardElevation="@dimen/d0">

                    <ImageView
                        android:id="@+id/image_no_one"
                        android:layout_width="@dimen/d87"
                        android:layout_height="@dimen/d87"
                        android:layout_margin="@dimen/d4"
                        android:src="@mipmap/add" />
                </android.support.v7.widget.CardView>

                <ImageView
                    android:layout_width="@dimen/d19"
                    android:layout_height="@dimen/d23"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/d6"
                    android:src="@mipmap/no1" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d5"
                android:text="NO:1"
                android:textColor="@color/FC_999999"
                android:textSize="@dimen/s13"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_no_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d2"
                android:text="大蜘蛛"
                android:textColor="@color/FC_333333"
                android:textSize="@dimen/s13"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/d41"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="@dimen/d62"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    android:layout_width="@dimen/d62"
                    android:layout_height="@dimen/d62"
                    android:layout_marginTop="@dimen/d4"
                    app:cardCornerRadius="@dimen/d31"
                    app:cardElevation="@dimen/d0">

                    <ImageView
                        android:id="@+id/image_no_three"
                        android:layout_width="@dimen/d62"
                        android:layout_height="@dimen/d62"
                        android:src="@mipmap/add" />
                </android.support.v7.widget.CardView>

                <ImageView
                    android:layout_width="@dimen/d19"
                    android:layout_height="@dimen/d23"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/no3" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d5"
                android:text="NO:3"
                android:textColor="@color/FC_999999"
                android:textSize="@dimen/s13"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_no_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d2"
                android:text="小海豚"
                android:textColor="@color/FC_333333"
                android:textSize="@dimen/s13"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>