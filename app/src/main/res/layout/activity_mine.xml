<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/d230"
            android:background="@mipmap/bg"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d24"
                android:layout_marginTop="@dimen/d18"
                android:text="我的"
                android:textColor="@color/white"
                android:textSize="@dimen/s17"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/relative_change_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d22">

                <android.support.v7.widget.CardView
                    android:layout_width="@dimen/d87"
                    android:layout_height="@dimen/d87"
                    android:layout_centerHorizontal="true"
                    app:cardCornerRadius="@dimen/d44"
                    app:cardElevation="@dimen/d0">

                    <ImageView
                        android:id="@+id/image_head"
                        android:layout_width="@dimen/d87"
                        android:layout_height="@dimen/d87"
                        android:src="@mipmap/add" />
                </android.support.v7.widget.CardView>

                <ImageView
                    android:layout_width="@dimen/d9"
                    android:layout_height="@dimen/d19"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/d24"
                    android:src="@mipmap/personal" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/view_line"
                    android:text="昵称"
                    android:textColor="@color/white"
                    android:textSize="@dimen/s15"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/view_line"
                    android:layout_width="@dimen/d1"
                    android:layout_height="@dimen/d11"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/d10"
                    android:layout_marginRight="@dimen/d10"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/tv_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/view_line"
                    android:text="职务"
                    android:textColor="@color/white"
                    android:textSize="@dimen/s13" />

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relative_help_center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d52">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/d24"
                android:text="帮助中心"
                android:textColor="@color/FC_333333"
                android:textSize="@dimen/s14" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/d20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/d24"
                android:src="@mipmap/side" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/d1"
            android:layout_marginLeft="@dimen/d24"
            android:layout_marginTop="@dimen/d17"
            android:background="@color/FC_E8E9EB" />

        <RelativeLayout
            android:id="@+id/relative_number_safety"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d18">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/d24"
                android:text="账号安全"
                android:textColor="@color/FC_333333"
                android:textSize="@dimen/s14" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/d20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/d24"
                android:src="@mipmap/side" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/d1"
            android:layout_marginLeft="@dimen/d24"
            android:layout_marginTop="@dimen/d17"
            android:background="@color/FC_E8E9EB" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d18">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/d24"
                android:text="版本信息"
                android:textColor="@color/FC_333333"
                android:textSize="@dimen/s14" />

            <TextView
                android:id="@+id/text_version_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/d24"
                android:text="v1.0.1"
                android:textColor="@color/FC_B3B3B3"
                android:textSize="@dimen/s12" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/d1"
            android:layout_marginLeft="@dimen/d24"
            android:layout_marginTop="@dimen/d17"
            android:background="@color/FC_E8E9EB" />

        <Button
            android:id="@+id/btn_exit_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d42"
            android:layout_marginLeft="@dimen/d24"
            android:layout_marginRight="@dimen/d24"
            android:layout_marginTop="@dimen/d52"
            android:background="@drawable/mine_bottom_exit_login_bg"
            android:text="退出登录"
            android:textColor="@color/FC_333333"
            android:textSize="@dimen/s14"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>