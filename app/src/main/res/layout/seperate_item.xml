<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d20"
        android:layout_marginTop="@dimen/d23">

        <ImageView
            android:layout_width="@dimen/d21"
            android:layout_height="@dimen/d21"
            android:layout_centerVertical="true"
            android:src="@mipmap/order" />

        <TextView
            android:id="@+id/text_order_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/d27"
            android:text="订单号:"
            android:textColor="@color/black"
            android:textSize="@dimen/s14" />
        <TextView
            android:id="@+id/text_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/d8"
            android:text="123456"
            android:layout_toRightOf="@+id/text_order_name"
            android:textColor="@color/black"
            android:textSize="@dimen/s14" />

        <LinearLayout
            android:id="@+id/ll_seperate_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/seperate_type_bg"
            android:layout_toRightOf="@+id/text_order"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/d6">
            <TextView
                android:id="@+id/text_order_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="不可分"
                android:textColor="@color/FC_00D47D"
                android:textSize="@dimen/s9"
                android:layout_marginTop="@dimen/d1"
                android:layout_marginBottom="@dimen/d1"
                android:layout_marginLeft="@dimen/d3"
                android:layout_marginRight="@dimen/d3"/>

        </LinearLayout>
        <TextView
            android:id="@+id/text_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15分钟前"
            android:textSize="@dimen/s11"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/d24"
            android:textColor="@color/FC_FF2414"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d1"
        android:background="@color/FC_E5E5E5"
        android:layout_marginLeft="@dimen/d24"
        android:layout_marginTop="@dimen/d10"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d19">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/d24">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="面积:   "
                android:textColor="@color/FC_888888"
                android:textSize="@dimen/s13"/>
            <TextView
                android:id="@+id/text_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="402m"
                android:textSize="@dimen/s13"
                android:textColor="@color/FC_333333"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/d180">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="区域:   "
                android:textColor="@color/FC_888888"
                android:textSize="@dimen/s13"/>
            <TextView
                android:id="@+id/text_region"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="土拨鼠小区"
                android:textSize="@dimen/s13"
                android:textColor="@color/FC_333333"/>

        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d18">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/d24">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="房屋类型:   "
                android:textColor="@color/FC_888888"
                android:textSize="@dimen/s13"/>
            <TextView
                android:id="@+id/text_home_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="别墅"
                android:textSize="@dimen/s13"
                android:textColor="@color/FC_333333"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/d180">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="户型:   "
                android:textColor="@color/FC_888888"
                android:textSize="@dimen/s13"/>
            <TextView
                android:id="@+id/text_house_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3室1厅1卫"
                android:textSize="@dimen/s13"
                android:textColor="@color/FC_333333"/>

        </LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/d18"
        android:layout_marginLeft="@dimen/d24">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小区:   "
            android:textColor="@color/FC_888888"
            android:textSize="@dimen/s13"/>
        <TextView
            android:id="@+id/text_community"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="锦绣花园"
            android:textSize="@dimen/s13"
            android:textColor="@color/FC_333333"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d7"
        android:background="@color/FC_F7F7F7"
        android:layout_marginTop="@dimen/d23"/>

</LinearLayout>