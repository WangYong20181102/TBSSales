<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d18">

        <TextView
            android:id="@+id/tv_left_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/d13"
            android:text="*"
            android:textColor="@color/FC_EF133A"
            android:textSize="@dimen/s13" />

        <TextView
            android:id="@+id/tv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/d24"
            android:text="公司名称"
            android:textColor="@color/FC_333333"
            android:textSize="@dimen/s14" />

        <com.tbs.sales.widget.ClearEditText
            android:id="@+id/cet_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/d25"
            android:layout_toRightOf="@+id/tv_left"
            android:background="@null"
            android:drawablePadding="@dimen/d10"
            android:gravity="end|right"
            android:textColor="@color/FC_333333"
            android:textColorHint="@color/FC_999999"
            android:textSize="@dimen/s12" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d1"
        android:layout_marginLeft="@dimen/d24"
        android:layout_marginTop="@dimen/d17"
        android:background="@color/FC_E8E9EB" />

</LinearLayout>