<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d45"
        android:layout_marginLeft="@dimen/d24"
        android:layout_marginRight="@dimen/d24">

        <TextView
            android:id="@+id/tv_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="取消"
            android:textColor="@color/black"
            android:textSize="@dimen/s15"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="客户详情"
            android:textColor="@color/black"
            android:textSize="@dimen/s17"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="确认"
            android:textColor="@color/black"
            android:textSize="@dimen/s15"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d9"
        android:background="@color/FC_F8F8F8" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linear_client_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/d24"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_client_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d23"
                    android:text="客户类型"
                    android:textColor="@color/FC_333333"
                    android:textSize="@dimen/s15"
                    android:textStyle="bold" />

                <com.tbs.sales.widget.MyGridView
                    android:id="@+id/grid_view_client_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/d23"
                    android:layout_marginTop="@dimen/d14"
                    android:layout_marginRight="@dimen/d23"
                    android:numColumns="4"
                    android:verticalSpacing="@dimen/d9" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_give_up_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d33">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/d13"
                    android:text="*"
                    android:textColor="@color/FC_EF133A"
                    android:textSize="@dimen/s13" />

                <TextView
                    android:id="@+id/tv_give_up_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/d23"
                    android:text="客户标签"
                    android:textColor="@color/FC_333333"
                    android:textSize="@dimen/s15"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_right_give_up_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/d9"
                    android:layout_toLeftOf="@+id/image_give_up_type"
                    android:text="请选择"
                    android:textColor="@color/FC_999999"
                    android:textSize="@dimen/s12" />

                <ImageView
                    android:id="@+id/image_give_up_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/d24"
                    android:src="@mipmap/side" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linear_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d33"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d23"
                    android:text="下次拜访"
                    android:textColor="@color/FC_333333"
                    android:textSize="@dimen/s15"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/linear_date_time"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/d33"
                    android:layout_marginLeft="@dimen/d24"
                    android:layout_marginTop="@dimen/d14"
                    android:background="@drawable/data_time_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_date_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/d15"
                        android:textColor="@color/FC_999999"
                        android:textSize="@dimen/s13" />

                    <ImageView
                        android:id="@+id/image_date_time"
                        android:layout_width="@dimen/d16"
                        android:layout_height="@dimen/d16"
                        android:layout_marginLeft="@dimen/d9"
                        android:layout_marginRight="@dimen/d14"
                        android:src="@mipmap/rili" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_follow_miaoshu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d33"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/d13"
                        android:text="*"
                        android:textColor="@color/FC_EF133A"
                        android:textSize="@dimen/s13" />

                    <TextView
                        android:id="@+id/tv_follow_miaoshu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/d23"
                        android:text="跟进描述"
                        android:textColor="@color/FC_333333"
                        android:textSize="@dimen/s15"
                        android:textStyle="bold" />
                </RelativeLayout>

                <EditText
                    android:id="@+id/et_follow_miaoshu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d23"
                    android:layout_marginTop="@dimen/d14"
                    android:layout_marginRight="@dimen/d23"
                    android:background="@null"
                    android:hint="添加描述"
                    android:maxEms="50"
                    android:textColor="@color/FC_333333"
                    android:textSize="@dimen/s13" />


            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>