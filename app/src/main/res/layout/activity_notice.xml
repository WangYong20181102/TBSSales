<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d45">

        <LinearLayout
            android:id="@+id/linear_back"
            android:layout_width="@dimen/d37"
            android:layout_height="@dimen/d37"
            android:layout_centerVertical="true"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/d13"
                android:layout_height="@dimen/d13"
                android:src="@mipmap/back" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="通知"
            android:textColor="@color/black"
            android:textSize="@dimen/s17"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d9"
        android:background="@color/FC_F8F8F8" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/d24"
            android:orientation="vertical"
            android:paddingLeft="@dimen/d24"
            android:paddingRight="@dimen/d28">

            <TextView
                android:id="@+id/text_tittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="标题"
                android:textColor="@color/FC_333333"
                android:textSize="@dimen/s15"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d7"
                android:text="2019/3/1 14:31"
                android:textColor="@color/FC_999999"
                android:textSize="@dimen/s11" />

            <TextView
                android:id="@+id/text_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d18"
                android:lineSpacingExtra="@dimen/d8"
                android:text="新的一年即将到来，祖国大地一片祥和，全国人民载歌载舞，准备迎接新的征程。值此新春佳节，公司放假15，嗨翻天！
"
                android:textColor="@color/FC_333333"
                android:textSize="@dimen/s13" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>