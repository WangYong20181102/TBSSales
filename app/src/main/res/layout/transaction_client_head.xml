<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d9"
        android:background="@color/FC_F8F8F8" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d33"
        android:layout_marginLeft="@dimen/d24"
        android:layout_marginTop="@dimen/d19"
        android:layout_marginRight="@dimen/d24"
        android:layout_marginBottom="@dimen/d14">

        <LinearLayout
            android:id="@+id/linear_date_time"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/d27"
            android:layout_centerVertical="true"
            android:background="@drawable/data_time_bg"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d14"
                android:text="本月"
                android:textColor="@color/FC_333333"
                android:textSize="@dimen/s13" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d3"
                android:layout_marginRight="@dimen/d16"
                android:text="▼"
                android:textColor="@color/FC_999999"
                android:textSize="@dimen/s8" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客户数:"
                android:textColor="@color/FC_999999"
                android:textSize="@dimen/s12" />

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d5"
                android:text="0个"
                android:textColor="@color/FC_999999"
                android:textSize="@dimen/s12" />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d1"
        android:layout_marginLeft="@dimen/d24"
        android:layout_marginRight="@dimen/d24"
        android:background="@color/FC_D8D8D8" />

</LinearLayout>