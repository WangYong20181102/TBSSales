<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_click"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/d22"
    android:paddingTop="@dimen/d19"
    android:paddingRight="@dimen/d25">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_city"
            android:layout_width="@dimen/d21"
            android:layout_height="@dimen/d21"
            android:layout_centerVertical="true"
            android:src="@mipmap/company" />

        <TextView
            android:id="@+id/text_company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/d7"
            android:layout_marginTop="@dimen/d2"
            android:layout_toRightOf="@+id/image_city"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="土拨鼠网络科技"
            android:textColor="@color/FC_333333"
            android:textSize="@dimen/s15"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/FC_999999"
            android:textSize="@dimen/s12" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d29"
        android:layout_marginTop="@dimen/d13"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/FC_666666"
            android:textSize="@dimen/s13" />

        <TextView
            android:id="@+id/tv_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d86"
            android:textColor="@color/FC_666666"
            android:textSize="@dimen/s13" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d1"
        android:layout_marginLeft="@dimen/d4"
        android:layout_marginTop="@dimen/d19"
        android:layout_marginRight="@dimen/d1"
        android:background="@color/FC_EEEEEE" />

</LinearLayout>