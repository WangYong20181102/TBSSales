<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/view_top_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d24" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="@dimen/d13"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/d24"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/d2"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/un_select" />

            <View
                android:id="@+id/view_left_line"
                android:layout_width="@dimen/d1"
                android:layout_height="match_parent"
                android:background="@color/FC_D8D8D8"
                android:layout_marginTop="@dimen/d2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d10"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/d14">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="土拨鼠"
                    android:textColor="@color/FC_999999"
                    android:textSize="@dimen/s13" />

                <TextView
                    android:id="@+id/tv_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/d23"
                    android:text="2019-03-29 11:11"
                    android:textColor="@color/FC_999999"
                    android:textSize="@dimen/s13" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linear_biaoqian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/d14"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/d3"
                    android:layout_height="@dimen/d3"
                    android:background="@drawable/client_detail_menu" />

                <TextView
                    android:id="@+id/tv_biaoqian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d9"
                    android:text="#标签1#     #标签2#"
                    android:textColor="@color/FC_333333"
                    android:textSize="@dimen/s13" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/d14"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/d3"
                    android:layout_height="@dimen/d3"
                    android:background="@drawable/client_detail_menu" />

                <TextView
                    android:id="@+id/tv_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d9"
                    android:text="要签约了，正在走合同流程。"
                    android:textColor="@color/FC_333333"
                    android:textSize="@dimen/s13" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/d14"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/d3"
                    android:layout_height="@dimen/d3"
                    android:background="@drawable/client_detail_menu" />

                <TextView
                    android:id="@+id/tv_change_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d9"
                    android:text="从持续跟进变成成交客户"
                    android:textColor="@color/FC_333333"
                    android:textSize="@dimen/s13" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_suggest_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/d14"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/d3"
                    android:layout_height="@dimen/d3"
                    android:background="@drawable/client_detail_menu" />

                <TextView
                    android:id="@+id/tv_communic_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d9"
                    android:text="建议沟通方式：微信沟通"
                    android:textColor="@color/FC_333333"
                    android:textSize="@dimen/s13" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_video_voice"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d33"
                android:layout_marginRight="@dimen/d24"
                android:layout_marginBottom="@dimen/d24"
                android:background="@drawable/client_detail_sound_bg"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/image_play"
                    android:layout_width="@dimen/d20"
                    android:layout_height="@dimen/d20"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/d9"
                    android:src="@mipmap/play" />

                <SeekBar
                    android:id="@+id/seekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/d9"
                    android:layout_marginRight="@dimen/d10"
                    android:layout_toLeftOf="@+id/linear"
                    android:layout_toRightOf="@+id/image_play"
                    android:maxHeight="3.4dp"
                    android:minHeight="3.4dp"
                    android:paddingStart="7dp"
                    android:paddingLeft="7dp"
                    android:paddingEnd="7dp"
                    android:paddingRight="7dp"
                    android:progressDrawable="@drawable/bg_adjust_seek_bar"
                    android:splitTrack="false"
                    android:thumb="@drawable/bg_seek_bar_thumb" />

                <LinearLayout
                    android:id="@+id/linear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/d14"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_current_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:00"
                        android:textColor="@color/FC_107BFD"
                        android:textSize="@dimen/s12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/"
                        android:textColor="@color/FC_666666"
                        android:textSize="@dimen/s12" />

                    <TextView
                        android:id="@+id/tv_total_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:00"
                        android:textColor="@color/FC_666666"
                        android:textSize="@dimen/s12" />
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>