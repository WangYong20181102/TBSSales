<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_click"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/d22"
    android:paddingTop="@dimen/d19"
    android:paddingRight="@dimen/d25">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_city"
            android:layout_width="@dimen/d21"
            android:layout_height="@dimen/d21"
            android:layout_centerVertical="true"
            android:src="@mipmap/company" />

        <TextView
            android:id="@+id/text_company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/d7"
            android:layout_marginTop="@dimen/d2"
            android:layout_toRightOf="@+id/image_city"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="土拨鼠网络科技"
            android:textColor="@color/FC_333333"
            android:textSize="@dimen/s15"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/linear_private"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/d5"
            android:layout_toRightOf="@+id/text_company_name"
            android:background="@drawable/private_bg"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d4"
                android:layout_marginTop="@dimen/d1"
                android:layout_marginRight="@dimen/d4"
                android:layout_marginBottom="@dimen/d1"
                android:text="私有"
                android:textColor="@color/FC_3BCC92"
                android:textSize="@dimen/s9" />

        </LinearLayout>

        <TextView
            android:id="@+id/text_remarks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="意向客户"
            android:textColor="@color/FC_FF8400"
            android:textSize="@dimen/s12" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d29"
        android:layout_marginTop="@dimen/d14"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID:"
            android:textColor="@color/FC_999999"
            android:textSize="@dimen/s13" />

        <TextView
            android:id="@+id/text_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d10"
            android:text="123456"
            android:textColor="@color/FC_999999"
            android:textSize="@dimen/s13" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d29"
        android:layout_marginTop="@dimen/d13"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="领取人:"
            android:textColor="@color/FC_666666"
            android:textSize="@dimen/s13" />

        <TextView
            android:id="@+id/text_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d10"
            android:text="土拨鼠"
            android:textColor="@color/FC_666666"
            android:textSize="@dimen/s13" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d1"
        android:layout_marginLeft="@dimen/d4"
        android:layout_marginTop="@dimen/d19"
        android:layout_marginRight="@dimen/d1"
        android:background="@color/FC_EEEEEE" />

</LinearLayout>